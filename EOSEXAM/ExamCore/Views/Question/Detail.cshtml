@model dynamic

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-12 stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <tr>
                            <td>Subject</td>
                            <td>@Model.Question.Subject.Name</td>
                        </tr>
                        <tr>
                            <td>Question</td>
                            <td>@Model.Question.Content</td>
                        </tr>
                    </table>
                </div>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.Question.Id"><label class="badge badge-warning">Edit</label></a>
                    <a asp-action="Index"><label class="badge badge-danger">Back</label></a>
                </div>
            </div>
        </div>
    </div>
</div>


